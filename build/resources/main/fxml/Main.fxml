<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" prefWidth="512.0" spacing="16.0" stylesheets="@../css/Style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.era.Controller">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="16.0">
         <children>
            <Button mnemonicParsing="false" text="Download" />
            <CheckBox mnemonicParsing="false" text="Do you want to choose a path?" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <VBox alignment="CENTER_LEFT" spacing="4.0">
         <children>
            <Label text="You need to enter a valid URL to download its contents:" />
            <TextField promptText="URL Address" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
      <VBox alignment="CENTER_LEFT" disable="true" layoutX="10.0" layoutY="54.0" spacing="4.0">
         <children>
            <Label text="If you would like, you can choose a path to save your file:" />
            <HBox>
               <children>
                  <TextField promptText="Path To Save File" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Choose..." />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
</VBox>
